<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hau_green</item>
        <item name="colorPrimaryVariant">@color/hau_dark_green</item>
        <item name="colorOnPrimary">@color/hau_white_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/hau_status_bar_color</item>
    </style>

    <style name="NewCustomAppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/hau_dark_green</item>
        <item name="colorPrimaryDark">@color/hau_status_bar_color</item>
        <item name="colorAccent">@color/hau_green</item>

        <item name="android:textColorPrimary">@color/hau_status_bar_color</item>

        <!--메뉴, 뒤로가기 색상-->
        <item name="colorControlNormal">@color/hau_status_bar_color</item>
        <!--기본 배경 색상-->
        <item name="android:windowBackground">@color/hau_white_green</item>
        <!--상태바 색상-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/hau_status_bar_color</item>
        <!--터치 효과 색상-->
        <item name="colorControlHighlight">@color/hau_bright_green</item>
        <!--액션바 색상-->
        <item name="actionBarTheme">@style/ThemeOverlay.ActionBar</item>
    </style>

    <style name="ThemeOverlay.ActionBar" parent="">
        <item name="colorPrimary">@color/hau_white_green</item>
    </style>

</resources>