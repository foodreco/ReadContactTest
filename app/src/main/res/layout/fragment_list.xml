<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:contentDescription="연락처"
        android:id="@+id/recyclerView_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.hieupt.android.standalonescrollbar.StandaloneScrollBar
        android:id="@+id/scroll_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        app:layout_anchor="@+id/recyclerView_list"
        app:layout_anchorGravity="end|center" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_up_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/hau_white_green"
        app:icon="@drawable/ic_baseline_keyboard_double_arrow_up_24"
        app:iconTint="@color/hau_dark_green"
        app:layout_anchor="@id/recyclerView_list"
        app:layout_anchorGravity="bottom|center"
        android:contentDescription="리스트 올리기 버튼"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
