<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update.UpdateFragment"
    android:id="@+id/updateFragment_background">

    <EditText
        android:id="@+id/contact_name_update"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <EditText
        android:id="@+id/contact_number_update"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="bottom"
        android:hint="전화번호"
        android:inputType="phone"
        android:scrollHorizontally="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/contact_name_update"
        app:layout_constraintStart_toStartOf="@+id/contact_name_update"
        app:layout_constraintTop_toBottomOf="@+id/contact_name_update" />

    <EditText
        android:id="@+id/contact_group_update"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="bottom"
        android:hint="그룹명"
        android:inputType="textPersonName"
        android:scrollHorizontally="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/contact_name_update"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contact_name_update"
        app:layout_constraintTop_toBottomOf="@+id/contact_number_update" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="변경"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_group_update"
        app:layout_constraintVertical_bias="0.1" />


</androidx.constraintlayout.widget.ConstraintLayout>