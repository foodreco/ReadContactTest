<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".callLog.CallLogFragment"
    android:padding="4dp">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/callLog_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hieupt.android.standalonescrollbar.StandaloneScrollBar
        android:id="@+id/scroll_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/callLog_recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/callLog_recyclerView" />

    <ProgressBar
        android:id="@+id/call_log_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/callLog_recyclerView"
        app:layout_constraintEnd_toEndOf="@+id/callLog_recyclerView"
        app:layout_constraintStart_toStartOf="@+id/callLog_recyclerView"
        app:layout_constraintTop_toTopOf="@+id/callLog_recyclerView"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>